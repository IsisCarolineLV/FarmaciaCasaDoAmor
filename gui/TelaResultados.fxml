<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TelaResultadosController">
   
   <left>
      <VBox prefWidth="200.0" style="-fx-background-color: #5F8696; -fx-background-radius: 0 30 30 0;" BorderPane.alignment="CENTER" />
   </left>
   
   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #E0E7EB;" BorderPane.alignment="CENTER">
         <children>
            
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 20;">
               <children>
                  
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #8DA6B0; -fx-background-radius: 20 20 0 0;">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                     <children>
                        <Label text="Resultados da Pesquisa" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label fx:id="labelMensagem" text="Nenhum medicamento encontrado" textFill="#757575">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
               <effect>
                  <javafx.scene.effect.DropShadow color="#00000020" />
               </effect>
            </VBox>
            
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#acaoVoltar" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #8DA6B0; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;" text="Nova Pesquisa" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
