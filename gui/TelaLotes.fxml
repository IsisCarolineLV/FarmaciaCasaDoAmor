<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TelaLotesController">
   
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #5F8696; -fx-background-radius: 0 30 30 0;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Menu" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Label>
            
            <Button mnemonicParsing="false" onAction="#voltarParaInicio" prefHeight="50.0" prefWidth="160.0" style="-fx-background-color: #3e5c6b; -fx-text-fill: white; -fx-background-radius: 15; -fx-cursor: hand; -fx-font-weight: bold;" text="&lt; Voltar" />
         </children>
      </VBox>
   </left>
   
   <center>
      <StackPane style="-fx-background-color: #E0E7EB;" BorderPane.alignment="CENTER">
         <children>
            
            <HBox alignment="TOP_RIGHT" pickOnBounds="false">
               <padding>
                  <Insets right="20.0" top="20.0" />
               </padding>
               <children>
                  <Circle fill="#5f8696" radius="20.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
               </children>
            </HBox>

            <VBox alignment="TOP_CENTER" maxWidth="700.0" spacing="20.0">
               <children>
                  <Label fx:id="lblTitulo" text="Lotes do Medicamento" textFill="#5f8696">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>

                  <TableView fx:id="tabelaLotes" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colId" prefWidth="75.0" style="-fx-alignment: CENTER;" text="ID Lote" />
                      <TableColumn fx:id="colValidade" prefWidth="200.0" style="-fx-alignment: CENTER;" text="Validade" />
                      <TableColumn fx:id="colQtd" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Qtd. Itens" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>

                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                         <Button onAction="#handleExcluirLote" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-weight: bold; -fx-cursor: hand;" text="Excluir Lote Selecionado" />
                     </children>
                  </HBox>

               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="60.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
