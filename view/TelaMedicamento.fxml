<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TelasControllers.TelaMedicamentoController">
   
   <left>
      <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #5F8696; -fx-background-radius: 0 30 30 0;" BorderPane.alignment="CENTER" />
   </left>
   
   <center>
      <VBox alignment="CENTER" style="-fx-background-color: #E0E7EB;" BorderPane.alignment="CENTER">
         <children>
            
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="482.0" prefWidth="655.0" style="-fx-background-color: white; -fx-background-radius: 20;">
               <children>
                  
                  <HBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: #8DA6B0; -fx-background-radius: 20 20 0 0;">
                     <children>
                        <Label fx:id="labelTitulo" text="Nome do medicamento" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  
                  <VBox alignment="CENTER" prefHeight="422.0" prefWidth="642.0" spacing="25.0">
                     <padding>
                        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
                     </padding>
                     <children>
                        <VBox prefHeight="214.0" prefWidth="643.0" spacing="10.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <Label prefHeight="30.0" prefWidth="218.0" text="Nome do medicamento:" textFill="#5e6d73">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="labelNome" lineSpacing="1.0" prefHeight="30.0" prefWidth="245.0" text="exemplo nome" textFill="#8da6b0">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <Label prefHeight="30.0" prefWidth="127.0" text="Composição:" textFill="#5e6d73">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="labelComposicao" lineSpacing="1.0" prefHeight="44.0" prefWidth="442.0" text="exemplo composição" textFill="#8da6b0" wrapText="true">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <Label prefHeight="30.0" prefWidth="355.0" text="Quantidade de Comprimidos por Caixa:" textFill="#5e6d73">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="labelQuantidade" lineSpacing="1.0" prefHeight="30.0" prefWidth="163.0" text="100" textFill="#8da6b0">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <Label prefHeight="30.0" prefWidth="131.0" text="Estoque atual:" textFill="#5e6d73">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="labelEstoqueComprimidos" lineSpacing="1.0" prefHeight="30.0" prefWidth="178.0" text="100 comprimidos" textFill="#8da6b0">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                    <Label lineSpacing="1.0" prefHeight="30.0" prefWidth="42.0" text="—" textFill="#8da6b0">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="labelEstoqueCaixas" lineSpacing="1.0" prefHeight="30.0" prefWidth="155.0" text="1 caixa" textFill="#8da6b0">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="586.0" spacing="5.0">
                                 <children>
                                    <Label prefHeight="30.0" prefWidth="166.0" text="Código de barras:" textFill="#5e6d73">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="labelCodigoBarras" lineSpacing="1.0" prefHeight="30.0" prefWidth="245.0" text="exemplo codigo" textFill="#8da6b0">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <HBox alignment="CENTER" spacing="50.0" />
                        <HBox alignment="CENTER" spacing="50.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#acaoVerLotes" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #8DA6B0; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;" text="Lotes" />
                              <Button mnemonicParsing="false" onAction="#acaoEditar" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #8DA6B0; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;" text="Editar" />
                              <Button mnemonicParsing="false" onAction="#acaoVoltar" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #8DA6B0; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;" text="Voltar" />
                           </children>
                        </HBox>

                     </children>
                  </VBox>
               </children>
               <effect>
                  <javafx.scene.effect.DropShadow color="#00000020" />
               </effect>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
