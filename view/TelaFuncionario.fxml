<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/8.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.TelasControllers.TelaFuncionarioController">

    <left>
        <VBox prefWidth="200.0"
              style="-fx-background-color: #5F8696; -fx-background-radius: 0 30 30 0;"
              BorderPane.alignment="CENTER"/>
    </left>

    <center>
        <VBox alignment="CENTER"
              style="-fx-background-color: #E0E7EB;"
              BorderPane.alignment="CENTER">

            <children>

                <VBox maxHeight="-Infinity" maxWidth="-Infinity"
                      prefHeight="496.0" prefWidth="480.0"
                      style="-fx-background-color: white; -fx-background-radius: 20;">
                    <children>

                        <HBox alignment="CENTER" prefHeight="60.0"
                              style="-fx-background-color: #8DA6B0; -fx-background-radius: 20 20 0 0;">
                            <children>
                                <Label text="Funcionário responsável" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="20.0"/>
                                    </font>
                                </Label>
                            </children>
                        </HBox>

                        <VBox alignment="CENTER" prefHeight="436.0" prefWidth="494.0" spacing="25.0">
                            <padding>
                                <Insets bottom="40.0" left="50.0" right="50.0" top="40.0"/>
                            </padding>
                            <children>

                                <ImageView fitHeight="180.0" fitWidth="188.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@pessoinhaAzul.png"/>
                                    </image>
                                </ImageView>

                                <Label text="NOME:" textFill="#9bb5bfb6">
                                    <font><Font size="11.0"/></font>
                                    <VBox.margin><Insets bottom="-15.0"/></VBox.margin>
                                </Label>

                                <Label fx:id="labelNome" text="ADMIN" textFill="#4d6169">
                                    <font><Font name="System Bold" size="20.0"/></font>
                                    <VBox.margin><Insets bottom="-50.0" top="-15.0"/></VBox.margin>
                                </Label>

                                <Label fx:id="labelErroQtd" text="Permitido apenas números!" textFill="RED" visible="false"/>

                                <Label text="CPF:" textFill="#9bb5bfb6">
                                    <font><Font size="11.0"/></font>
                                    <VBox.margin><Insets bottom="-15.0" top="-10.0"/></VBox.margin>
                                </Label>

                                <Label fx:id="labelCPF" text="1234" textFill="#4d6169">
                                    <font><Font name="System Bold" size="20.0"/></font>
                                    <VBox.margin><Insets top="-15.0"/></VBox.margin>
                                </Label>

                                <HBox alignment="CENTER" spacing="20.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#acaoTrocar"
                                                prefHeight="45.0" prefWidth="120.0"
                                                style="-fx-background-color: #8DA6B0; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;"
                                                text="Trocar"/>

                                        <Button mnemonicParsing="false" onAction="#acaoCadastrar"
                                                prefHeight="45.0" prefWidth="120.0"
                                                style="-fx-background-color: #8DA6B0; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;"
                                                text="Cadastrar"/>

                                        <Button mnemonicParsing="false" onAction="#acaoVoltar"
                                                prefHeight="45.0" prefWidth="120.0"
                                                style="-fx-background-color: #8DA6B0; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;"
                                                text="Voltar"/>
                                    </children>
                                    <VBox.margin><Insets top="20.0"/></VBox.margin>
                                </HBox>

                            </children>
                        </VBox>

                    </children>

                    <effect>
                        <DropShadow color="#00000020"/>
                    </effect>

                </VBox>

            </children>

        </VBox>
    </center>

</BorderPane>