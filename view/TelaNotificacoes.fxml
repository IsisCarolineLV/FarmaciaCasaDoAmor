<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TelasControllers.TelaNotificacoesController">
   
   <left>
      <VBox prefWidth="200.0" style="-fx-background-color: #5F8696; -fx-background-radius: 0 30 30 0;" BorderPane.alignment="CENTER" />
   </left>
   
   <center>
      <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #E0E7EB;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            
            <Label text="Central de Notificações" textFill="#5f8696">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" hvalue="0.28" pannable="true" prefHeight="408.0" prefWidth="620.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-radius: 15;">
               <content>
                  
                     <VBox fx:id="paneNotificacoes" alignment="CENTER" fillWidth="true" minHeight="400.0" prefWidth="500.0" spacing="7.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-radius: 15;">
                     <children>
                        <Label fx:id="labelAviso" textFill="#909090"> 
                              <font>
                                 <Font size="19.0" />
                              </font>
                        </Label>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
            
            <Button mnemonicParsing="false" onAction="#acaoVoltar" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #5F8696; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" text="Voltar" />
            
         </children>
      </VBox>
   </center>
</BorderPane>
