<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" 
            xmlns="http://javafx.com/javafx/8.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.TelasControllers.TelaHistoricoController">

    <!-- MENU LATERAL -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="200.0" spacing="20.0"
              style="-fx-background-color: #5F8696; -fx-background-radius: 0 30 30 0;"
              BorderPane.alignment="CENTER">

            <children>
                <Label text="Menu" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>

                <Button mnemonicParsing="false" onAction="#handleVoltar" 
                        prefHeight="50.0" prefWidth="160.0"
                        style="-fx-background-color: #4A6E7C; -fx-text-fill: white; 
                               -fx-background-radius: 15; -fx-cursor: hand; -fx-font-weight: bold;"
                        text="&lt; Voltar ao Estoque" />
            </children>
        </VBox>
    </left>

    <!-- PARTE CENTRAL -->
    <center>
        <StackPane style="-fx-background-color: #E0E7EB;" BorderPane.alignment="CENTER">
            <children>

                <VBox alignment="TOP_CENTER" maxWidth="750.0" spacing="20.0">
                    <children>

                        <Label text="Histórico de Movimentação" textFill="#5f8696">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" top="40.0" />
                            </VBox.margin>
                        </Label>

                        <!-- TABELA (CORRIGIDA COM 4 COLUNAS) -->
                        <TableView fx:id="historicoTable" prefHeight="450.0" prefWidth="700.0"
                                   style="-fx-background-color: white; -fx-background-radius: 10;"
                                   VBox.vgrow="ALWAYS">

                            <columns>
                                <TableColumn fx:id="dataColumn" prefWidth="120.0" text="Data" />
                                <TableColumn fx:id="horaColumn" prefWidth="80.0" text="Hora" />
                                <TableColumn fx:id="acaoColumn" prefWidth="380.0" text="Ação / Descrição" />
                                <TableColumn fx:id="funcionarioColumn" prefWidth="120.0" text="Usuário" />
                            </columns>

                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>

                        </TableView>

                    </children>

                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </padding>

                </VBox>

            </children>
        </StackPane>
    </center>

</BorderPane>