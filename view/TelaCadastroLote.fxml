<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TelasControllers.TelaCadastroLoteController">
   
   <left>
      <VBox prefWidth="200.0" style="-fx-background-color: #5F8696; -fx-background-radius: 0 30 30 0;" BorderPane.alignment="CENTER" />
   </left>
   
   <center>
      <VBox alignment="CENTER" style="-fx-background-color: #E0E7EB;" BorderPane.alignment="CENTER">
         <children>
            
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 20;">
               <children>
                  
                  <HBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: #8DA6B0; -fx-background-radius: 20 20 0 0;">
                     <children>
                        <Label text="Cadastro de Novo Lote" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  
                  <VBox alignment="CENTER" spacing="25.0">
                     <padding>
                        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
                     </padding>
                     <children>
                        
                        <TextField fx:id="campoNomeMedicamento" prefHeight="45.0" promptText="Nome do Medicamento" style="-fx-background-color: #D3D3D3; -fx-background-radius: 20; -fx-padding: 0 20;" />
                        
                        <TextField fx:id="campoQuantidade" prefHeight="45.0" promptText="Quantidade de Caixas" style="-fx-background-color: #D3D3D3; -fx-background-radius: 20; -fx-padding: 0 20;" />
                        
                        <Label fx:id="labelErroQtd" text="Permitido apenas nÃºmeros!" textFill="RED" visible="false" />
                        
                        <DatePicker fx:id="campoValidade" prefHeight="45.0" prefWidth="600.0" promptText="Data de Validade" style="-fx-background-color: #D3D3D3; -fx-font-size: 14;" />

                        <HBox alignment="CENTER" spacing="50.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#acaoSalvar" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #8DA6B0; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;" text="Salvar" />
                              <Button mnemonicParsing="false" onAction="#acaoCancelar" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #8DA6B0; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;" text="Cancelar" />
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>

                     </children>
                  </VBox>
               </children>
               <effect>
                  <javafx.scene.effect.DropShadow color="#00000020" />
               </effect>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
