<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TelasControllers.TelaInicialController">
   
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #5F8696; -fx-background-radius: 0 30 30 0;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Menu" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Label>
            
            <Button mnemonicParsing="false" onAction="#irParaCadastroLote" prefHeight="50.0" prefWidth="160.0" style="-fx-background-color: #4A6E7C; -fx-text-fill: white; -fx-background-radius: 15; -fx-cursor: hand; -fx-font-weight: bold;" text="+ Adicionar Lote" />
            <Button mnemonicParsing="false" onAction="#irParaCadastroMedicamento" prefHeight="59.0" prefWidth="160.0" style="-fx-background-color: #4A6E7C; -fx-text-fill: white; -fx-background-radius: 15; -fx-cursor: hand; -fx-font-weight: bold;" text="+ Adicionar Medicamento" textAlignment="CENTER" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#irParaHistorico" prefHeight="50.0" prefWidth="160.0" style="-fx-background-color: #4A6E7C; -fx-text-fill: white; -fx-background-radius: 15; -fx-cursor: hand; -fx-font-weight: bold;" text="Historico" />
         </children>
      </VBox>
   </left>
   
   <center>
      <StackPane style="-fx-background-color: #E0E7EB;" BorderPane.alignment="CENTER">
         <children>
            
            <VBox alignment="TOP_CENTER" maxWidth="700.0" spacing="20.0">
               <children>
                  <Label text="Estoque Atual" textFill="#5f8696">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>

                  <TextField fx:id="campoPesquisa" prefHeight="40.0" promptText="Digite o nome do medicamento ou código..." style="-fx-background-color: white; -fx-border-color: #5F8696; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 0 20;" />
                  
                  <TableView fx:id="tabelaMedicamentos" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colNome" prefWidth="350.0" text="Medicamento" />
                      <TableColumn fx:id="colCodigo" minWidth="0.0" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Cód. Barras" />
                      <TableColumn fx:id="colQuantidade" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Qtd. Total" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>

               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="60.0" />
               </padding>
            </VBox>

            <HBox alignment="TOP_RIGHT" pickOnBounds="false">
               <padding>
                  <Insets right="20.0" top="20.0" />
               </padding>
               <children>
                  <Circle fill="#5f8696" onMouseClicked="#irParaNotificacoes" radius="20.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-cursor: hand;" />
                  <Circle fx:id="circleAtencao" fill="#a94c4c" radius="6.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" visible="false">
                     <HBox.margin>
                        <Insets left="-10.0" />
                     </HBox.margin>
                  </Circle>
               </children>
            </HBox>

         </children>
      </StackPane>
   </center>
</BorderPane>